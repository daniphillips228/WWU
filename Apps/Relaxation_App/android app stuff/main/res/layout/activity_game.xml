<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamberg.chillapp.GameActivity">

    <TextView
        android:id="@+id/point_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="left"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:text="@string/point_total"
        android:fontFamily="sans-serif-medium"
        android:textSize="40dp"
        android:textColor="#b9b9b9"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/setting_button"
        android:layout_width="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="2dp"
        android:layout_height="50dp"
        android:background="@drawable/settingsbutton"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="52dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="325dp"
        android:layout_height="48dp"
        android:background="@drawable/home"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb1_button"
        android:layout_width="120dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="25dp"
        android:layout_height="120dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb2_button"
        android:layout_width="120dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="125dp"
        android:layout_height="120dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb3_button"
        android:layout_width="140dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="225dp"
        android:layout_height="140dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb4_button"
        android:layout_width="60dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="25dp"
        android:layout_height="60dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb5_button"
        android:layout_width="80dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="220dp"
        android:layout_height="80dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

    <ImageButton
        android:id="@+id/bubb6_button"
        android:layout_width="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="280dp"
        android:layout_height="50dp"
        android:background="@drawable/bubb"
        android:drawablePadding="4dp"/>

</RelativeLayout>
